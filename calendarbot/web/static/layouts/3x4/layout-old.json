{
  "name": "3x4",
  "display_name": "3×4 Compact",
  "description": "Compact portrait layout optimized for 3×4 inch e-ink displays and small screens",
  "version": "1.0.0",
  "orientation": "portrait",
  "dimensions": {
    "min_width": 240,
    "min_height": 320,
    "optimal_width": 300,
    "optimal_height": 400,
    "max_width": 480,
    "max_height": 640
  },
  "display_types": [
    "eink",
    "lcd"
  ],
  "themes": [
    "eink-compact-300x400"
  ],
  "capabilities": {
    "grid_dimensions": {
      "columns": 3,
      "rows": 4
    },
    "display_modes": ["portrait", "compact"],
    "supported_devices": ["eink", "small_lcd"],
    "touch_optimization": true,
    "content_truncation": true
  },
  "features": {
    "responsive": true,
    "touch_support": true,
    "keyboard_navigation": false,
    "auto_refresh": false,
    "theme_switching": true,
    "layout_switching": false,
    "animations": false,
    "mobile_optimized": true,
    "eink_optimized": true,
    "compact_mode": true,
    "content_truncation": true
  },
  "resources": {
    "css": [
      {
        "file": "3x4.css",
        "media": "screen",
        "priority": 1
      }
    ],
    "js": [
      {
        "file": "3x4.js",
        "type": "module",
        "priority": 1,
        "defer": true
      }
    ]
  },
  "compatibility": {
    "min_screen_width": 240,
    "min_screen_height": 320,
    "supports_touch": true,
    "supports_keyboard": false,
    "accessibility_features": [
      "high_contrast",
      "large_touch_targets",
      "simplified_navigation"
    ]
  },
  "performance": {
    "bundle_size_css": "~30KB",
    "bundle_size_js": "~25KB",
    "render_complexity": "low",
    "memory_usage": "low",
    "battery_optimized": true,
    "eink_refresh_optimized": true
  },
  "fallback_layouts": [
    "4x8"
  ],
  "eink_specific": {
    "disable_animations": true,
    "optimize_refresh": true,
    "content_truncation": {
      "current_event_title": 25,
      "upcoming_event_title": 20,
      "later_event_title": 15,
      "location": 18,
      "time_display": 12
    },
    "touch_targets": {
      "min_size": "35px",
      "spacing": "6px"
    },
    "typography": {
      "font_family": "DejaVu Sans Mono, Courier New, monospace",
      "base_size": "12px",
      "line_height": "1.2"
    }
  },
  "metadata": {
    "created": "2024-01-01",
    "author": "Calendar Bot Team",
    "license": "MIT",
    "tags": [
      "portrait",
      "compact",
      "eink",
      "low-power",
      "mobile",
      "touch-optimized"
    ]
  }
}