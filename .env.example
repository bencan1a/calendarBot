# CalendarBot Environment Configuration
# Copy this to .env and customize with your real values

# ICS Calendar Configuration
CALENDARBOT_ICS_URL=https://outlook.office365.com/owa/calendar/your-calendar-id/calendar.ics
CALENDARBOT_ICS_AUTH_TYPE=none

# Optional: Authentication for protected ICS feeds
# For basic auth:
# CALENDARBOT_ICS_AUTH_TYPE=basic
# CALENDARBOT_ICS_USERNAME=your-username
# CALENDARBOT_ICS_PASSWORD=your-password

# For bearer token auth:
# CALENDARBOT_ICS_AUTH_TYPE=bearer
# CALENDARBOT_ICS_BEARER_TOKEN=your-bearer-token

# Application Settings
CALENDARBOT_APP_NAME=CalendarBot
CALENDARBOT_REFRESH_INTERVAL=300
CALENDARBOT_CACHE_TTL=3600

# Display Settings
CALENDARBOT_DISPLAY_ENABLED=true
CALENDARBOT_DISPLAY_TYPE=console

# Web Interface (optional)
CALENDARBOT_WEB_ENABLED=false
CALENDARBOT_WEB_PORT=8080
CALENDARBOT_WEB_HOST=0.0.0.0

# Raspberry Pi E-ink Display (optional)
CALENDARBOT_RPI_ENABLED=false
CALENDARBOT_RPI_DISPLAY_WIDTH=800
CALENDARBOT_RPI_DISPLAY_HEIGHT=480

# Logging Configuration
CALENDARBOT_LOGGING__CONSOLE_LEVEL=WARNING
CALENDARBOT_LOGGING__FILE_ENABLED=true
CALENDARBOT_LOGGING__FILE_LEVEL=DEBUG