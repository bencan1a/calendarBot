{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Debug Jest Tests",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "jest",
                "--runInBand",
                "--testPathPatterns=tests/__tests__"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "name": "Debug Current Jest Test",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "jest",
                "--runInBand",
                "${relativeFile}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
