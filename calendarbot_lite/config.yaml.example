# Example config for calendarbot_lite
# List sources: add 1-3 ICS URLs (replace placeholders below with real URLs)
sources:
  - "https://example.com/calendar.ics"  # replace with a real ICS URL
  - "https://example.org/personal.ics"  # optional second source

# Refresh interval in seconds (default 300). Valid range: 60 - 1800
refresh_interval_seconds: 300

# rrule_expansion_days bounds recurrence expansion to limit CPU work
rrule_expansion_days: 14

# event_window_size limits number of in-memory events (recommended 3-5)
event_window_size: 5

# Server binding and port
server_bind: "0.0.0.0"
server_port: 8080

# Logging level: DEBUG, INFO, WARNING, ERROR
log_level: "INFO"

# Production: copy this file to /etc/calendarbot-lite/config.yaml
# Override the path when loading the config by passing a custom path to the loader
# (e.g., via CLI flag or environment variable) depending on your deployment.