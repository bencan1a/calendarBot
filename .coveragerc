[run]
# Coverage configuration for CalendarBot
source = calendarbot
branch = True
parallel = True

# Files to include in coverage
include = 
    calendarbot/*

# Files to exclude from coverage
omit =
    */tests/*
    */test_*
    */conftest.py
    */__pycache__/*
    */venv/*
    */env/*
    */migrations/*
    scripts/*
    setup.py
    manage.py

[report]
# Coverage reporting options
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

# Minimum coverage thresholds
fail_under = 80
precision = 2
show_missing = True
skip_covered = False
skip_empty = True

[html]
# HTML report configuration
directory = htmlcov
title = CalendarBot Test Coverage Report

[xml]
# XML report for CI integration
output = coverage.xml